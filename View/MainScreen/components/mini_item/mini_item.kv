<MiniItem>:
    size_hint: 1, None
    height: 175
    radius: 15
    md_bg_color: .161, .161, .161, .4
    padding: 10
    spacing: 10

    FitImage:
        size_hint: None, 1
        width: 105
        radius: 15
        source: root.source

    MDBoxLayout:
        orientation: 'vertical'
        spacing: 5
        adaptive_height: True
        pos_hint: {"center_y": .5}

        MDLabel:
            text: root.title
            font_name: "./assets/fonts/RobotoSlab-Regular.ttf"
            font_size: '18sp'
            size_hint: 1, None
            height: self.texture_size[1]

        MDLabel:
            text: f'Тривалість:  {root.timeline}'
            font_name: "./assets/fonts/RobotoSlab-Regular.ttf"
            font_size: '14sp'
            size_hint: 1, None
            height: self.texture_size[1]

        MDRectangleFlatIconButton:
            text: str(root.grade)
            font_size: '14sp'
            theme_text_color: "Custom"
            text_color: "#ffffff"
            icon_color: "#ffffff"
            icon: "star"
            line_color: 0, 0, 0, 0
            pos_hint: {"center_x": .12}