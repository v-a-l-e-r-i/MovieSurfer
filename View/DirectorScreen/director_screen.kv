<DirectorScreenView>
    orientation: "vertical"

    MDNavigationLayout:

        MDScreenManager:

            MDScreen:
                md_bg_color: "#021221"

                MDBoxLayout:
                    id: toolbar
                    orientation: 'vertical'
                    spacing: 10


                    MDBoxLayout:
                        orientation: "horizontal"
                        size_hint_y: None
                        height: "40dp"
                        padding: 0, 0, 10, 0
                        spacing: 15

                        MDIconButton:
                            icon: "menu"
                            pos_hint: {"center_y": .5}
                            on_press: nav_drawer.set_state("open")

                        MDLabel:
                            text: "MovieSurfer"
                            font_name: "./assets/fonts/RINGM___.TTF"

                        FitImage:
                            size_hint: None, None
                            width: "35dp"
                            height: "35dp"
                            radius: 25
                            source: "./assets/images/oscar.png"
                            pos_hint: {"center_y": .5}

                    MDBoxLayout:
                        size_hint: .9, None
                        height: "50dp"
                        md_bg_color: "#122f3f"
                        pos_hint: {"top": .97, "center_x": .5}
                        padding: 30, 0, 0, 0
                        radius: 20

                        MDTextField:
                            id: text_field
                            hint_text: "Director..."
                            pos_hint: {"center_y": .5}
                            line_color_normal: '#122f3f'
                            line_color_focus: '#122f3f'
                            hint_text_color_normal: "#f6faff"
                            hint_text_color_focus: "#f6faff"

                        MDIconButton:
                            icon: "magnify"
                            pos_hint: {"center_y": .5}
                            pos: text_field.width - self.width + dp(8), 0
                            theme_icon_color: "Custom"
                            icon_color: "#f6faff"
                            on_press: root.controller.search_film_by_director(text_field.text)

                    ScrollView:
                        on_scroll_y: root.on_scroll_y(self, args[1])

                        MDBoxLayout:
                            id: box_layout
                            orientation: 'vertical'
                            adaptive_height: True

                            MDBoxLayout:
                                adaptive_height: True
                                height: 40
                                spacing: 5
                                padding: 10, 0

                                MDLabel:

                                MDBoxLayout:
                                    id: box_grid
                                    adaptive_size: True
                                    md_bg_color: 0, 0, 0, .4
                                    radius: 15

                                    MDIconButton:
                                        id: grid_icon
                                        icon: 'view-grid'
                                        theme_text_color: 'Custom'
                                        text_color: .522, .71, .765
                                        on_press: root.grid_select()

                                MDBoxLayout:
                                    id: box_stream
                                    adaptive_size: True
                                    md_bg_color: 0, 0, 0, 0
                                    radius: 15

                                    MDIconButton:
                                        id: stream_icon
                                        icon: 'view-stream'
                                        theme_text_color: 'Custom'
                                        text_color: .706, .776, .796
                                        on_press: root.stream_select()


                            MDGridLayout:
                                id: item_grid
                                cols: 2
                                adaptive_height: True
                                spacing: 10
                                padding: 10

        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, 0, 0, 0)

            MDNavigationDrawerMenu:

                MDNavigationDrawerItem
                    icon: "home"
                    text: "Головна"
                    on_press: root.manager.current = 'main screen'

                MDNavigationDrawerItem
                    icon: "drama-masks"
                    text: "Жанр"
                    on_press: root.manager.current = 'genre screen'

                MDNavigationDrawerItem
                    icon: "movie-open"
                    text: "Режисер"
                    selected: True

                MDNavigationDrawerItem
                    icon: "rolodex"
                    text: "Рік"
                    on_press: root.manager.current = 'year screen'

                MDNavigationDrawerItem
                    icon: "account-details"
                    text: "Мій список"
                    on_press: root.manager.current = 'own screen'



