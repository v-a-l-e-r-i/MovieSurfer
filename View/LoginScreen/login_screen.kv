<LoginScreenView>

    FitImage:
        source: "assets/images/film1.jpg"

    FitImage:
        source: './assets/images/logo_with_background.png'
        size_hint: None, None
        size: 170, 170
        radius: 25
        pos_hint: {"center_x": .5, "top": .8}

    MDBoxLayout:
        orientation: "vertical"
        spacing: 15
        size_hint: .9, None
        height: 130
        pos_hint: {"center_x": .5, "top": .5}

        MDBoxLayout:
            size_hint: 1, None
            height: "50dp"
            md_bg_color: .161, .161, .161, .5
            padding: 5, 0, 0, 0
            spacing: 10
            radius: 20

            MDIconButton:
                icon: "account-circle-outline"
                pos_hint: {"center_y": .5}
                pos: username.width - self.width + dp(8), 0
                theme_text_color: "Hint"

            MDTextField:
                id: username
                hint_text: "Username"
                pos_hint: {"center_y": .5}
                line_color_normal: .161, .161, .161, .5
                line_color_focus: .161, .161, .161, .5
                hint_text_color_normal: "#f6faff"
                hint_text_color_focus: "#f6faff"
                text_color_normal: [.486, .482, .486]
                on_text: self.text_color_normal = [.486, .482, .486]

            MDLabel:
                size_hint_x: None
                width: 5


        MDBoxLayout:
            size_hint: 1, None
            height: "50dp"
            md_bg_color: .161, .161, .161, .5
            padding: 5, 0, 0, 0
            spacing: 10
            radius: 20

            MDIconButton:
                icon: "lock"
                pos_hint: {"center_y": .5}
                pos: passw.width - self.width + dp(8), 0
                theme_text_color: "Hint"

            MDTextField:
                id: passw
                hint_text: "Password"
                pos_hint: {"center_y": .5}
                line_color_normal: .161, .161, .161, .5
                line_color_focus: .161, .161, .161, .5
                hint_text_color_normal: "#f6faff"
                hint_text_color_focus: "#f6faff"
                password: True
                text_color_normal: [.486, .482, .486]
                on_text: self.text_color_normal = [.486, .482, .486]

            MDIconButton:
                icon: "eye-off"
                pos_hint: {"center_y": .5}
                pos: passw.width - self.width + dp(8), 0
                theme_text_color: "Hint"
                on_release:
                    self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                    passw.password = False if passw.password is True else True

    MDFillRoundFlatButton:
        text: "Get Started"
        font_size: "20sp"
        md_bg_color: "#92f4f7"
        theme_text_color: "Custom"
        text_color: "#091824"
        size_hint_x: .8
        pos_hint: {"center_x": .5, "top": .15}
        on_press: root.controller.loginToSystem(username.text, passw.text)


    MDTextButton:
        text: "Create Account"
        theme_text_color: "Custom"
        text_color: "#92f4f7"
        pos_hint: {"center_x": .5, "top": .05}
        on_press: root.manager.current = "register screen"










